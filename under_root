apt-get -y update && apt-get -y upgrade && apt-get -y install locales ca-certificates sudo wget && localedef -i ru_RU -f UTF-8 ru_RU.UTF-8 && clear && echo -e "ADDING NEW USER...\n\n" && adduser --gecos "" teacher && usermod -a -G sudo teacher && wget https://raw.githubusercontent.com/koo2018/websitebuilding/master/wsite_install && chown teacher:teacher ./wsite_install && chmod 700 ./wsite_install && reboot now
